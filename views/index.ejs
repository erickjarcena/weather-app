<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/src/styles.css">
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css" />
    <title>Weather Application</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand title" href="/">Weather App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home</a>
            <a class="nav-item nav-link" href="/">About Us</a>
          </div>
        </div>
      </nav>
      <div class="container region">
        <div class="region-container align-items-center"> 
            <h1 class="text-center"><%= currentTimeandProv.province %> <br> <%= currentTimeandProv.time %></h1>
            <form class="text-center" action="/" method="post">
                <label for="province">Province:</label>
                <select name="province" id="province">
                  <% for (var index = 0; index < provinceData.length; index++) { %>
                      <option value="<%= provinceData[index].key %>"> <%= provinceData[index].name %></option>
                  <% } %>
              </select>
                <button type="submit" class="btn btn-dark">Search</button>
            </form>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Location</th>
                  <th scope="col">Temperature</th>
                  <th scope="col">Description</th>
                  <th scope="col">Humidity</th>
                  <th scope="col">Wind</th>
                </tr>
              </thead>
              <tbody>
                <% for(var index = 0; index < weatherUpdate.length; index++) { %>
                  <tr>
                    <td><%= weatherUpdate[index].location %></td>
                    <td><%= weatherUpdate[index].temp %><span>Â°C</span></td>
                    <td><%= weatherUpdate[index].desc %></td>
                    <td><%= weatherUpdate[index].humidity %><span>%</span></td>
                    <td><%= weatherUpdate[index].wind %><span>m/s</span></td>
                  </tr>
               <% } %>
              </tbody>
            </table> 
        </div>
      </div>
</body>
</html>